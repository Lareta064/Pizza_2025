extends ../layouts/layout.pug

block content
	include ../sections/_header
	include ../sections/_promo-slider
	main.main
		
	
	//FOOTER
	include ../sections/_footer
	//popup-basket
	.popup-basket
		button.round-close
			svg.svg-cross(style="color: white;")
				use(href='./img/sprite.svg#svg-cross')

		.popup-basket-content
			.order-header.order-header--popup
				.order-header__group
					h1.title-2 Корзина:
					.total__group
						.total__count 4 шт. на сумму
						.price-box 1675 #[small руб.]
				//STEPS
				.order-steps
					.order-step.active
						.step-num 1
						span Корзина
					.order-step-space
					
					.order-step
						.step-num 2
						span Оформление
					
					.order-step-space
					
					.order-step
						.step-num 3
						span Заказ принят
			
			.popup-basket__cards
				+basket-card-popup
				+basket-card-combo
				+basket-card-popup

			
			//Reccomend слайдер
			.popup-reccomend
				.h4-bold Рекомендуем к вашему заказу
				.popup-swiper.swiper
					.swiper-wrapper
						.swiper-slide
							a(href="#!").card-short.card-row
								.card-short__img
									img(src='../img/goods/fri.webp', srcset='../img/goods/fri@2x.webp 2x' width='120' height='120' loading='lazy' alt='img')
								.card-short__txt
									p.txt-16 Закуски
									.card-btn
										span Выбрать
										
						.swiper-slide
							a(href="#!").card-short.card-row
								.card-short__img
									img(src='../img/goods/juice6.webp', srcset='../img/goods/juice6@2x.webp 2x' width='120' height='120' loading='lazy' alt='img')
								.card-short__txt
									p.txt-16 Напитки
									.card-btn
										span Выбрать
										
						.swiper-slide
							a(href="#!").card-short.card-row
								.card-short__img
									img(src='../img/goods/souse4.webp', srcset='../img/goods/souse4@2x.webp 2x' width='120' height='120' loading='lazy' alt='img')
								.card-short__txt
									p.txt-16 Соусы
									.card-btn
										span Выбрать
						.swiper-slide
							
							a(href="#!").card-short.card-row
								.card-short__img
									img(src='../img/goods/dessert2.webp', srcset='../img/goods/dessert2@2x.webp 2x' width='120' height='120' loading='lazy' alt='img')
								.card-short__txt
									p.txt-16 Дессерты
									.card-btn
										span Выбрать

			//footer popup
			.basket-footer.basket-footer--popup
				//TOTAL SUMM
				.total
					.total__txt Итого: 
					.total__group
						.total__count 4 шт. на сумму
						.price-box 1675 #[small руб.]
				//BUTTONS
				.buttons-row
					a(href="order-page.html").btn-accent Перейти к оформлению
					button.btn-light
						span Очистить корзину
						svg.svg-delete(style="width:1.25em; height: 1.25em;")
							use(href='./img/sprite.svg#svg-delete')

				


block variables
	-var bodyCl = 'lock'
	-var title = "Pizza Mega Magic";
