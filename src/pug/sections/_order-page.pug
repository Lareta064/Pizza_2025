				//- 		svg.svg-arr-left
				//- 			use(href='./img/sprite.svg#svg-arr-left')
				//- 		span Назад к заказам
					
				//- 	a(href="#!").btn-accent Оформить заказ

				.order-form-buttons.flex
					.buttons-row
						a(href="#!").btn-light
							svg.svg-arr-left
