			.order-form-body
				.order-left-column
					.form-fields-col
						.h4-bold Контактные данные
						.form-fields
							.form-item
								input(type="text" name="" placeholder="Имя")
							.form-item
								input(type="text" name="" placeholder="Телефон")
							.form-item
								input(type="text" name="" placeholder="Улица")
							.form-item-house.flex
								.form-item
									input(type="text" name="" placeholder="Дом")
								label.relative-label
									
									input(type="checkbox" name="promo")
									span.fake-checkbox
									p.txt-16.txt-s4 Частный дом
									
							.form-item-appartament.flex
								.form-item
									input(type="text" name="" placeholder="Квартира")
								.form-item
									input(type="text" name="" placeholder="Подъезд")
								.form-item
									input(type="text" name="" placeholder="Этаж")
								.form-item
									input(type="text" name="" placeholder="Домофон")
							
							.form-item
								textarea(placeholder="Комментарий к заказу" name="message")
				
				//RIGHT COLUMN
				.order-right-column
					.form-col
						.h4-bold Варианты доставки
						.order-form-delivery
							//выбор доставки
							.switch-group.switch-delivery#switch-delivery
								label.switch-label.switch-delivery-courier
									input(type="radio" name="delivery__type" )
									span.switch-btn Доставка курьером
								label.switch-label.switch-delivery-pickup
									input(type="radio" name="delivery__type" checked)
									span.switch-btn Самовывоз

							.switch-delivery-content
								#delivery-pickup.column-gap-10
									label.switch-label
										input(type="radio" name="address_item" checked)
										span.switch-label-item
											.switch-label__txt__icon
												svg.svg-pin
													use(href='./img/sprite.svg#svg-pin')
											.switch-label__txt
												p Самовывоз (Смоленский Пассаж) скидка 10%
												p.txt-s5 Москва, Смоленская площадь, дом 5 (Смоленский Пассаж)
									label.switch-label
										input(type="radio" name="address_item")
										span.switch-label-item
											.switch-label__txt__icon
												svg.svg-pin
													use(href='./img/sprite.svg#svg-pin')
											.switch-label__txt
